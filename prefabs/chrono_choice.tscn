script/source = "extends Control

@onready var anim_player = $AnimationPlayer

var is_open: bool = false

func close() -> void:
	is_open = false
	anim_player.play_backwards(\"fade_in\")

func _on_button_hourglass_pressed() -> void:
	close()
	
func _on_button_chrono_pressed() -> void:
	is_open = true
	anim_player.play(\"fade_in\")
	visible = true

func _on_animation_finished(anim_name: StringName) -> void:
	if anim_name == \"fade_in\" and !is_open:
		visible = false


func _on_button_option_1_button_up() -> void:
	print(\"chose option 1\\n\")
	close()

func _on_button_option_2_pressed() -> void:
	print(\"chose option 2\\n\")
	close()

func _on_button_option_3_pressed() -> void:
	print(\"chose option 3\\n\")
	close()
"

